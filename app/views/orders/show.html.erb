<h1>Your Cart</h1>
<div class= "features text-center newest">
<div class="text-center card">
<div class="card-body">
<% @order.cart.each do |order_item, quantity| %>
<ul>
  <li></li><h3><%= Product.find_by(id: order_item.product_id).name %></h3></li>
  <li> <%= form_with url: order_item_path(order_item.id), method: :patch do |f| %>
        <%= f.label :quantity %>
        <%= f.number_field :quantity, min: 1, value: quantity %>
        <%= f.submit "Update Quantity", class: "btn btn-primary" %>
      <% end %>   
      <%= button_to "Remove", order_item_path(order_item.id), method: :delete, class: "btn btn-primary" %>
  </li>
</ul>
<% end %>

<% if @order.orderitems.length > 0 %>
  <%= link_to "Complete Order", edit_order_path(@order.id), class: "btn btn-primary" %>
<% else %>
  <h5>Empty! Let's fix that: <%= link_to "Add Random", random_path, method: :post, class: "btn btn-primary" %></h5>
<% end %>
</div>
</div>
</div>

   