<%= form_with model: @work do |f| %>

<%= f.label :category %>
<%= f.select :category, Category.all, {}, class: "form-control" %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :price %>
<%= f.text_field :price %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :photo %>
<%= f.text_field :photo %>

<%= f.label :inventory %>
<%= f.text_field :inventory%>

<%= f.submit class: "btn btn-primary" %>

<% end %>