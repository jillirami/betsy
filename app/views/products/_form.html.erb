

<%= form_with model: @product do |f| %>

<h4><%= f.label :category %></h4>
<%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :price %>
<%= f.text_field :price %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :photo %>
<%= f.text_field :photo %>

<%= f.label :inventory %>
<%= f.text_field :inventory%>

<%= f.submit class: "btn btn-primary" %>

<% end %>