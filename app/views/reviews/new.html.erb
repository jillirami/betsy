Rate this Product: <%= Product.find_by(id: params[:product_id]).name %>

<section>
  <%= form_with model: @review, url: product_reviews_path do |f| %>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.select :rating, (1..5), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit Review", class: "btn btn-primary" %>
      </div>
  <% end %>
</section>



